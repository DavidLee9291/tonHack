{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		// "strict": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"src/*": [
				"./src/*"
			],
			"*": [
				"@types/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node",
			"vite/client"
		]
	},
	"include": ["src"],
	"exclude": ["src/components/mobile", "src/pages/mobile"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}